<h1>List of your ToDos </h1>
<%= link_to "create a todo" , new_todo_path %> 

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    
    <% @todos.each do |todo| %>
        <tr>
            <td> <%= todo.id %> </td>
            <td> <%= todo.name %> </td> 
            <td> <%= todo.description %> </td>
            <td> <%= link_to "Edit" , edit_todo_path(todo) %> </td>
            <td> <%= link_to "Show" , todo_path(todo) %> </td>
            <td><%= button_to 'Delete', todo_path(todo), method: :delete, data: { confirm: "Are you sure?"} %></td>
            
            </tr>
    <% end %>
</table>   

